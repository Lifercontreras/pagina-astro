<style>
	/* *{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	} */

	 html, body{
		padding: 0;
		margin: 0;
	 }

	header{
		height: 80px;
		background: #161d24;
	}

	.container{
		max-width: 940px;
		margin: 0 auto;
	}

	.flex-menu {
		display: flex;
		height: 100%;
		width: 60%;
		float: left;
		align-items: center;
		height: 80px;
		color: #f4e5e5;
		font-family: sans-serif;
		text-transform: uppercase;
	}

	.flex-menu img{
		width: 160px;
	}

	.flex-menu li {
		margin-left: 10px;
		list-style: none;
		display: inline-block;
	}

	.flex-menu a{
		text-decoration: none;
		color: #f4e5e5;
		font-weight: 600;
	}

	.flex-menu a:hover{
		color: #ffffff;
	}

	.menu-right {
		float: left;
		margin-top: 10px;
		width: 40%;
		color: #f4e5e5;
		font-family: sans-serif;
	}

	.menu-right a{
		margin: 0 8px;
		color: #f4e5e5;
		text-decoration: none;
	}

	.btn-download{
		color: #ffffff;
		background-color: #789806;
		display: inline-block;
		padding: 6px 12px;
		font-family: sans-serif;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 8px;
	}

	.btn-download:hover{
		background-color: #8aab14;
	}

	.btn-download svg{
		width: 18px;
	}

	.banner{
		background: orange;
		height: 360px;
	}

	.banner2{
		background-color: purple;
		height: 240px;
		position: relative;
	}

	.left-menu{
		background: pink;
		width: 180px;
		height: 360px;
		position: absolute;
		left: -180px;
	}

	.banner3{
		height: 1200px;
		background-color: turquoise;
	}
</style>
